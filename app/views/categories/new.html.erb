<h1>添加分类</h1>
<%= form_for @category do |f| %>
  <%= render "shared/error_messages", :target => @category %>
  <fieldset class="form-generic">
    <ul>
      <li><label>上级分类：</label><%= f.select :parent_id, nested_set_options(Category, @category) {|i, level| "-#{'-' * level} #{i.name}" }, :prompt => '根目录' %></li>
    </ul>
    <ul>
      <li><label>名称：</label><%= f.text_field :name, :class => 'text-field' %></li>
    </ul>
    <div class="operation-generic">
      <%= link_to '添加', '#', :onclick => "submitForm('new_category')", :class => 'button' %>
      <%= link_to '分类列表', categories_path, :class => 'button' %>
    </div>
  </fieldset>
<% end %>