<h1>全部中文文档列表</h1>
<table class="list-generic">
  <tr>
    <th>ID</th>
    <th>所属分类</th>
    <th>中文标题</th>
    <th>字数统计</th>
    <th>翻译语种数</th>
  </tr>
  <% if @documents.blank? %>
    <%= raw empty_record_tag %>
  <% else %>
    <% @documents.each_with_index do |document, index| %>
      <tr class="<%= odevity_tag index %>">
        <td><%= link_to document.id, document %></td>
        <td><%= document.category.name %></td>
        <td><%= document.title %></td>
        <td><%= human_word_count_for document.word_count %></td>
        <td><%= document.translations.count %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= will_paginate @documents %>