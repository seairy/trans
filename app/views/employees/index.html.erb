<h1>雇员列表<span><%= link_to '添加雇员', new_employee_path %></span></h1>
<table class="list-generic">
  <tr>
    <th>ID</th>
    <th>名称</th>
    <th>角色</th>
    <th>操作</th>
  </tr>
  <% if @employees.blank? %>
    <%= raw empty_record_tag %>
  <% else %>
    <% @employees.each_with_index do |employee, index| %>
      <tr class="<%= odevity_tag index %>">
        <td><%= link_to employee.id, employee %></td>
        <td><%= employee.name %></td>
        <td><%= human_employee_role_for employee.role %></td>
        <td><%= raw crud_for_list_tag(employee) %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= will_paginate @employees %>