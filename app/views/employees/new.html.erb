<h1>添加雇员</h1>
<%= form_for @employee do |f| %>
  <%= render "shared/error_messages", :target => @employee %>
  <fieldset class="form-generic">
    <ul>
      <li><label>名称：</label><%= f.text_field :name, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>角色：</label><%= f.select :role, employee_role_options_for_select %></li>
    </ul>
    <ul>
      <li><label>公司名称：</label><%= f.text_field :company_name, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>职位：</label><%= f.text_field :title, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>电话号码：</label><%= f.text_field :phone_number, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>电子邮件：</label><%= f.text_field :email, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>联系地址：</label><%= f.text_field :address, :class => 'text-field' %></li>
    </ul>
    <ul>
      <li><label>邮政编码：</label><%= f.text_field :postal_code, :class => 'text-field' %></li>
    </ul>
    <div class="operation-generic">
      <%= link_to '添加', '#', :onclick => "submitForm('new_employee')", :class => 'button' %>
      <%= link_to '雇员列表', employees_path, :class => 'button' %>
    </div>
  </fieldset>
<% end %>